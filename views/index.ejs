<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
</head>
<body>
  <h1>All Blog Posts</h1>
  <a href="/compose">âž• Add New Post</a>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <small>By <%= post.author %> on <%= post.date.toDateString() %></small>
      </li>
    <% }) %>
  </ul>
</body>
</html>
